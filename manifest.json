{
  "name": "Timmy",
  "description": "A countdown Timer",
  "version": "1.0",
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "icons": {
    "48":"images/48.png"
  },

  "manifest_version": 2,
  "browser_action": {
    "default_icon": {   
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
    "default_popup": "popup.html",
    "default_title": "Timmy the Timer"
   },
  "permissions": ["storage",
    "activeTab"
    ]
}
  

